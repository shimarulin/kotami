{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "module": "ES2022",
    "target": "ES2020",
    "lib": ["ES2023"],
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "ags/gtk4",
    "paths": {
      "@apps/*": ["./ns/apps/*"],
      "@libs/*": ["./ns/libs/*"],
      "@services/*": ["./ns/services/*"],
      "@utils/*": ["./ns/utils/*"],
      "@widgets/*": ["./ns/widgets/*"],
    }
  }
}
